programa {
  funcao inicio() {
    real numero1, numero2, numero3, media
    escreva("Digite o primeiro número: ")
    leia(numero1)

    escreva("Digite o segundo número: ")
    leia(numero2)

    escreva("Digite o terceiro numero: ")
    leia(numero3)

    media = (numero1 + numero2 + numero3) / 3

    escreva("A media dos numeros é: ", media)


  }
}
